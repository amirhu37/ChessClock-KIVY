Screen_Manager:
    Main_Screen:
    Play_ground:
    

<Main_Screen>:
    name: 'Main'
    #
    # Main LayOut
    BoxLayout:
        size_hint: None , None
        size: root.width/3 , root.height/4
        pos_hint: { 'center_x': .5 ,'top': 1 }
        padding: '10dp'
        spacing: '10dp'
        Label:
            id: intro
            markup: True
            text: '[color=000000] CHESS\n         CLOCK [/color]'
            canvas.before:
                Color:
                    rgba: 0, 1, 0, 1
                Line:
                    width: 5
                    rectangle: self.x, self.y, self.width, self.height
    #
    #BUTTONS LayOuts
    GridLayout:
        rows: 2
        col: 1
        
        size_hint: None , None
        size: root.width/3 , 3*(root.height)/4
        pos_hint: {'center_x': .5 , 'y': 0.01 }
        padding: [ 0 , '25dp']
        spacing: [ 0 , '25dp']
        canvas.before:
            Color:
                rgba: 1, 0, 0, 1
            Line:
                width: .5
                rectangle: self.x, self.y, self.width, self.height

        #
        #Start the APP Butt
        Button:  
            id: start
            markup: True
            spacing: '100dp'
            text: ' [color=000000] Start [/color]'
            size_hint: None , None
            background_color: (1, 1 , 1 , 0)
            pos_hint: {'center_x': .5 , 'y': 1}
            size: self.parent.width , self.height
            on_press: 
                app.root.current = 'playGround'
                root.manager.transition.direction ='left'
            

            canvas.before:
                Color:
                    rgba: 1, 0, 0, .5
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [ 25  , ]

        #
        # about
        Button:
            id: about
            markup: True
            text: ' [color=000000] About [/color]'
            size_hint: None , None
            size: self.parent.width , self.height
            pos_hint: { 'center_x': .5 , 'bottom': 1 }
            background_color: (1, 1 , 1 , 0)
            spacing: '10dp'
            
            canvas.before:
                Color:
                    rgba: 1, 0, 0, .5
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [ 25  , ]

<Play_ground>:
    name: 'playGround'
    #
    # Labels LayOut
    GridLayout:
        name: 'CountDownLabels'
        rows: 1
        cols: 2
        #orientation: 'horizontal'
        size_hint: None , None
        size: root.width , root.height/4
        pos_hint: { 'center_x': .5 ,'top': 1 }
       # padding: ['10dp']
       # spacing: '10dp'

        Label:
            id: 'white time'
            markup: True
            text: '[color=000000] 00:00 [/color]'
            size_hint: None , None
            size: self.parent.width/2 , self.parent.height
            pos_hint: {'center_x': 0}
            canvas.before:
                Color:
                    rgba: 0, 1, 0, 1
                Line:
                    width: 1
                    rectangle: self.x, self.y, self.width, self.height

        Label:
            id: 'black time'
            markup: True
            text: '[color=000000] 00:00 [/color]'
            size_hint: None , None
            size: self.parent.width/2 , self.parent.height
            pos_hint: {'center_x': 1}
            canvas.before:
                Color:
                    rgba: 0, 1, 0, 1
                Line:
                    width: 1
                    rectangle: self.x, self.y, self.width, self.height
    #
    # Butts
    GridLayout:
        name: 'players butts'
        rows: 1
        cols: 2
        #orientation: 'horizontal'
        size_hint: None , None
        size: root.width , 3*(root.height)/4
        pos_hint: { 'center_x': .5 ,'y': 0 }

        ToggleButton:  
            id: White_Player
            markup: True
            spacing: '100dp'
            text: ' [color=000000] White Player [/color]'
            size_hint: None , None
            background_color: (1, 1 , 1 , 0)
            pos_hint: {'center_x': 0 , 'bottom': 1 }
            size: self.parent.width/2 , self.parent.height
            state: 'normal'
            on_press: root.white()


            canvas.before:
                Color:
                    rgba: 1, 0, 0, 1
                Line:
                    width: 1
                    rectangle: self.x, self.y, self.width, self.height


        ToggleButton:  
            id: Black_Player
            markup: True
            spacing: '100dp'
            text: ' [color=000000] Black Player [/color]'
            size_hint: None , None
            background_color: (1, 1 , 1 , 0)
            pos_hint: {'center_x': 1 , 'bottom': 1 }
            size: self.parent.width/2 , self.parent.height
            
            on_press: root.Black()
            
            canvas.before:
                Color:
                    rgba: 1, 0, 0, 1
                Line:
                    width: 1
                    rectangle: self.x, self.y, self.width, self.height
#
#Setting Time
<Timer_pop_up>:
    title:'Test popup'  
    size_hint:(None, None)
    size:(400, 400)
    
    Button:
        text: 'Close me!'
        on_release: app.root.current = 'playGround'